    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        },
        {
            "name": "DQN CR Sugarl Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "src/atari_cr/agents/dqn_atari_cr.py",
            "console": "integratedTerminal",
            "args": [
                "--env", "boxing",
                "--env-num", "1",
                "--seed", "0",
                "--exp-name", "dqn_cr_debug",
                "--fov-size", "20",
                "--clip-reward",
                "--capture-video",
                "--total-timesteps", "10000",
                "--buffer-size", "100000",
                "--learning-starts", "1000",
                // "--sensory-action-x-size", "4",
                // "--sensory-action-y-size", "4",
            ],
            "justMyCode": false
        },
        {
            "name": "Render Focus Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "common/render_focus.py",
            "console": "integratedTerminal",
            "args": [
                "recordings/boxing_3m/dqn_atari_sugarl/boxing/boxing_seed0_step3000000_eval00_record.pt",
                "test.mp4"
            ]
        }
    ]
}