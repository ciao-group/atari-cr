    "version": "0.2.0",
    "configurations": [
        {
            "name": "GazePrediction Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "src/atari_cr/atari_head/atari_head.py",
            "console": "integratedTerminal",
            "args": [
                "--debug"
            ]
        },
        {
            "name": "Ray Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "src/atari_cr/common/hyperparams.py",
            "console": "integratedTerminal",
        },
        {
            "name": "DQN CR Sugarl Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "src/atari_cr/agents/dqn_atari_cr/main.py",
            "console": "integratedTerminal",
            "pythonArgs": [
                // Not having this displays a warning because frozen modules bad
                "-Xfrozen_modules=off"
            ],
            "args": [
                "--clip_reward",
                "--capture_video",
                "--env", "ms_pacman",
                // Debug config
                "--exp_name", "dqn_cr_debug",
                "--total_timesteps", "10000",
                "--learning_start", "1000",
                "--debug",
                // Additional config
                "--pause_cost", "0.05",
                "--use_pause_env",
                "--action_repeat", "5"
            ],
            "justMyCode": false
        },
    ]
}